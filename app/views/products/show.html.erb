<h2><%= @product.title %></h2>

<%= link_to "Edit Game Product", edit_product_path(@product) %>
<%= link_to "Delete Game Product",
     product_path(@product),
     :method => :delete,
     :confirm => "Are you sure you want to delete this game product?" %>
<%= link_to "New Bug", new_product_bug_path(@product) %>

<ul id='bugs'>
  <% @product.bugs.each do |bug| %>
    <li>
      #<%= bug.id %> -
      <%= link_to bug.title, [@product, bug] %>
    </li>
  <% end %>
</ul>
