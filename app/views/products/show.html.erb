<h2><%= @product.title %></h2>

<p><%= link_to "Edit Game Product", edit_product_path(@product) %></p>
<p><%= link_to "Delete Game Product",
     product_path(@product),
     :method => :delete,
     :confirm => "Are you sure you want to delete this game product?" %></p>
<p><b><%= link_to "New Bug", new_product_bug_path(@product) %></b></p>

<ul class="nav nav-list" id='bugs'>
  <% @product.bugs.each do |bug| %>
    <li class="nav-header">
      Bug <%= bug.id %><%= link_to bug.title, [@product, bug] %>
    </li>
  <% end %>
</ul>
