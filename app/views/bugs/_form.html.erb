<%= form_for [@product, @bug] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :priority %><br>
    <%= f.select(:priority, [['High', "High"], ['Medium', "Medium"], ['Low', "Low"], ['Trivial', "Trivial"]]) %>
  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.select(:status, [['Open', "Open"], ['Closed', "Closed"], ['Verified', "Verified"]]) %>
  </p>
  <p>
    <%= f.label :reporter %><br>
    <%= f.text_field :reporter %>
  </p>
  <%= f.submit :class => 'btn btn-primary'%>
<% end %>
