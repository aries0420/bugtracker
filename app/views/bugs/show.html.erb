<div id='bug'>
  <h2><%= @bug.title %></h2>
  <%= link_to "Edit Bug", [:edit, @product, @bug] %>
  <%= link_to "Delete Bug", [@product, @bug], :method => :delete,
       :confirm => "Are you sure you want to delete this bug?" %>
  <%= simple_format(@bug.description) %>
  <%= @bug.priority %>
  <%= @bug.status %>
  <%= @bug.reporter %>
</div>
